{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["es2020", "dom"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
