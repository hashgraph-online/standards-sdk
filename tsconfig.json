{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@hashgraph/hedera-wallet-connect": [
        "node_modules/@hashgraph/hedera-wallet-connect/dist/index.d.ts"
      ],
      "@hashgraph/hedera-wallet-connect/*": [
        "node_modules/@hashgraph/hedera-wallet-connect/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "demo/**/*", "cli/**/*"]
}
