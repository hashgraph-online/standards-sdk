{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "source",
    "jsx": "react-jsx",
    "types": [
      "node"
    ]
  },
  "include": [
    "source"
  ]
}
