{
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest"]
  },
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "testEnvironment": "./jest-environment-hedera.js",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "transformIgnorePatterns": ["/node_modules/(?!(?:@noble)/)"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "moduleNameMapper": {
    "^file-type$": "<rootDir>/__mocks__/file-type.js",
    "^../src$": "<rootDir>/src",
    "^@hashgraphonline/standards-sdk$": "<rootDir>/src/index.ts"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/services/registry-broker/client/skills.ts",
    "!src/utils/is-dapp-signer.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html", "json"],
  "coverageThreshold": {
    "global": {
      "branches": 30,
      "functions": 50,
      "lines": 45,
      "statements": 45
    }
  }
}
